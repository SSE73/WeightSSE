<div class="product-weight">

  {% if this.getWeight() != 0 %}
    {% if this.getYesnoSelectbox() != 'N' %}
      <li class="product-weight">
        <div><strong>{{ t('Weight') }}</strong></div>
        <span>{{ this.formatWeight(this.getWeight())|raw }}</span>
      </li>
    {% endif %}
  {% endif %}

</div>